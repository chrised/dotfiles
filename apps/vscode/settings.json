{
    // Fix for Vim-mode on Linux
    "keyboard.dispatch": "keyCode",
    // Internal
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Monokai",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.rulers": [
        79
    ],
    "workbench.editor.closeEmptyGroups": false,
    "files.autoSave": "onFocusChange",
    "npm.enableScriptExplorer": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    // Disabling this to reduce lag, see: https://github.com/VSCodeVim/Vim/issues/3868
    "vim.statusBarColorControl": false,
    // Gitlens
    "workbench.colorCustomizations": {
        "gitlens.trailingLineForegroundColor": "#c1bb00",
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    // Python
    "python.linting.pylintEnabled": false,

    // Go
    "go.inferGopath": true,
    "go.formatTool": "gofmt",
    "go.useLanguageServer": true,
    // JavaScript
    "jslint.enable": false,
    // Shellcheck
    "shellcheck.customArgs": [
        "-x"
    ],
    // cSpell
    //"cSpell.enabled": false,
    //"cSpell.language": "en-GB",
    //"cSpell.userWords": [
    //    "kubernetes"
    //],
    // Other
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "Menlo for Powerline",
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false,
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    // Ansible
    "files.associations": {
        "**/defaults/**/*": "ansible",
        "**/tasks/**/*.yml": "ansible",
        "**/handler/*.yml": "ansible",
        "**/*_vars/**/*.yml": "ansible",
        "**/roles/**/*.yml": "ansible",
        "**/playbooks/**/*.yml": "ansible",
        "**/*ansible*/**/*.yml": "ansible",
        "**/vars/**/*.yml": "ansible",
        "**/inventory/*/*": "ansible",
        "Dockerfile*": "dockerfile"
    },
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    // This mythical incantation disables isort for Python
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "workbench.sideBar.location": "left",
    "files.insertFinalNewline": true,
    "liveshare.featureSet": "insiders",
    "breadcrumbs.enabled": true,
    "editor.suggestSelection": "first",
    "trailing-spaces.highlightCurrentLine": false,
    "files.trimFinalNewlines": true,
    "shellcheck.enable": false,
    "extensions.autoUpdate": false,
    "python.linting.pylamaEnabled": true,
    "python.linting.pylamaPath": "pylava",
    "vim.debug.silent": true,
    "vim.foldfix": true,
    "editor.quickSuggestionsDelay": 500,
    "vim.highlightedyank.enable": true,
    "gitlens.defaultDateFormat": "YYYY/MM/DD",
    "gitlens.defaultDateShortFormat": "YY/MM/DD",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "python.linting.banditEnabled": true,
    "python.linting.banditPath": "bandit -c .bandit.yaml",
}
